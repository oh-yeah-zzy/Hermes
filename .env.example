# Hermes 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# ========== 服务配置 ==========
HERMES_HOST=0.0.0.0
HERMES_PORT=8080
HERMES_DEBUG=false

# ========== ServiceAtlas 配置 ==========
HERMES_REGISTRY_ENABLED=true
HERMES_REGISTRY_URL=http://localhost:9000
HERMES_SERVICE_ID=hermes
HERMES_SERVICE_NAME=Hermes API Gateway
HERMES_SERVICE_HOST=127.0.0.1
HERMES_HEARTBEAT_INTERVAL=30
HERMES_ROUTE_REFRESH_INTERVAL=30

# ========== 代理配置 ==========
HERMES_PROXY_TIMEOUT=30.0
HERMES_PROXY_MAX_RETRIES=3
HERMES_PROXY_RETRY_DELAY=0.5

# ========== 负载均衡 ==========
# 可选值: round_robin, random, least_conn
HERMES_LOAD_BALANCE_STRATEGY=round_robin

# ========== 限流配置 ==========
HERMES_RATE_LIMIT_ENABLED=true
HERMES_RATE_LIMIT_GLOBAL_QPS=10000
HERMES_RATE_LIMIT_PER_ROUTE_QPS=1000
HERMES_RATE_LIMIT_PER_IP_QPS=100
HERMES_RATE_LIMIT_BURST_MULTIPLIER=1.5

# ========== 熔断配置 ==========
HERMES_CIRCUIT_BREAKER_ENABLED=true
HERMES_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
HERMES_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
HERMES_CIRCUIT_BREAKER_TIMEOUT=30.0

# ========== 日志配置 ==========
HERMES_LOG_LEVEL=INFO
HERMES_LOG_JSON_FORMAT=true

# ========== CORS 配置 ==========
# 多个值用逗号分隔
HERMES_CORS_ORIGINS=*

# ========== 指标配置 ==========
HERMES_METRICS_ENABLED=true
HERMES_METRICS_PATH=/metrics
